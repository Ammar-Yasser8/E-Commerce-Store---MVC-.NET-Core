@model ShoppingCartVM

<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="~/ShoppingCart/style.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        .shopping-cart {
            padding: 3rem 0;
        }

        .block-heading {
            text-align: center;
            margin-bottom: 2rem;
            color: #343a40;
        }

            .block-heading h2 {
                font-weight: bold;
            }

        .summary {
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 5px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .product {
            background-color: #fff;
            border-radius: 5px;
            padding: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
        }

        .product-name a {
            font-size: 1.25rem;
            color: #000;
            font-weight: bold;
        }

        .quantity .btn {
            border-radius: 5px;
        }

        .price span {
            font-size: 1.25rem;
            font-weight: bold;
            color: #343a40;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-weight: bold;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <main class="page">
        <section class="shopping-cart">
            <div class="container">
                <div class="block-heading">
                    <h2>Shopping Cart</h2>
                    <p>Review your items and make adjustments before proceeding to checkout.</p>
                </div>
                <div class="content">
                    <div class="row">
                        <div class="col-md-12 col-lg-8">
                            <div class="items">
                                @foreach (var item in Model.CartsList)
                                {
                                    <div class="product">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <img class="img-fluid mx-auto d-block image" src="~/@item.Product.Img" alt="@item.Product.Name" />
                                            </div>
                                            <div class="col-md-7">
                                                <div class="info">
                                                    <div class="row">
                                                        <div class="col-md-12 product-name">
                                                            <a href="#">@item.Product.Name</a>
                                                            <div class="product-info">
                                                                <div>Description: <span class="value">@item.Product.Description</span></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12 quantity d-flex align-items-center mt-3">
                                                            <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-dark btn-sm">
                                                                <i class="bi bi-dash-square"></i>
                                                            </a>
                                                            <input type="text" value="@item.Count" readonly class="form-control text-center mx-2" style="width: 60px;" />
                                                            <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-dark btn-sm">
                                                                <i class="bi bi-plus-square"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2 text-right">
                                                <div class="price">
                                                    <span>@item.Product.Price.ToString("C")</span>
                                                </div>
                                                <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger btn-sm mt-3">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-4">
                            <div class="summary">
                                <h3>Summary</h3>
                                <div class="summary-item d-flex justify-content-between">
                                    <span class="text">Total</span>
                                    <span class="price">@Model.TotalCarts.ToString("C")</span>
                                </div>
                                <a class="btn btn-primary btn-block mt-4" asp-controller="Cart" asp-action="Summary">Proceed to Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
